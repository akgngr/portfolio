---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import SectionTitle from '../components/ui/SectionTitle.astro';
import Card from '../components/ui/Card.astro';
import { Mail, Linkedin, Github, Twitter, MapPin, CheckCircle } from 'lucide-react';

const PROFILE = {
  name: 'John Doe',
  email: 'hello@johndoe.dev',
  location: 'Istanbul, Turkey',
  socials: [
    { platform: 'GitHub', url: 'https://github.com' },
    { platform: 'LinkedIn', url: 'https://linkedin.com' },
    { platform: 'Twitter', url: 'https://twitter.com' },
  ]
};

const getSocialUrl = (platform: string) => PROFILE.socials.find(s => s.platform === platform)?.url || '#';
---

<Layout title="Contact" description="Get in touch for freelance projects, collaborations, or just to say hello.">
  <div class="pt-32 pb-20 px-6 max-w-7xl mx-auto relative">
    {/* Background Blob - Reduced */}
    <div class="absolute top-[20%] left-[50%] -translate-x-1/2 w-[600px] h-[600px] rounded-full bg-primary/5 blur-[100px] -z-10"></div>

    <SectionTitle 
      title="Let's Talk" 
      subtitle="Have a project in mind or just want to chat? I'm always open to new opportunities." 
      center
    />

    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
          <Card className="flex flex-col items-center text-center gap-4 hover:-translate-y-1">
              <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/5 flex items-center justify-center text-white">
                  <Mail size={24} />
              </div>
              <div>
                  <h4 class="font-bold text-white text-base">Email</h4>
                  <p class="text-text-muted text-sm mb-2">{PROFILE.email}</p>
                  <a href={`mailto:${PROFILE.email}`} class="text-white text-sm font-semibold hover:underline">Send Message</a>
              </div>
          </Card>
          <Card className="flex flex-col items-center text-center gap-4 hover:-translate-y-1">
              <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/5 flex items-center justify-center text-white">
                  <Linkedin size={24} />
              </div>
              <div>
                  <h4 class="font-bold text-white text-base">LinkedIn</h4>
                  <p class="text-text-muted text-sm mb-2">Connect professionally</p>
                  <a href={getSocialUrl('LinkedIn')} target="_blank" rel="noreferrer" class="text-white text-sm font-semibold hover:underline">View Profile</a>
              </div>
          </Card>
          <Card className="flex flex-col items-center text-center gap-4 hover:-translate-y-1">
              <div class="w-12 h-12 rounded-lg bg-white/5 border border-white/5 flex items-center justify-center text-white">
                  <Github size={24} />
              </div>
              <div>
                  <h4 class="font-bold text-white text-base">GitHub</h4>
                  <p class="text-text-muted text-sm mb-2">Check my code</p>
                  <a href={getSocialUrl('GitHub')} target="_blank" rel="noreferrer" class="text-white text-sm font-semibold hover:underline">Follow Me</a>
              </div>
          </Card>
      </div>

      <Card className="max-w-2xl mx-auto !p-8 md:!p-12 border border-white/5 bg-[#1e212f]">
          <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div class="space-y-2">
                      <label class="text-xs font-bold text-text-muted uppercase tracking-wider ml-1">Name</label>
                      <input type="text" placeholder="John Doe" class="w-full bg-[#151720] border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-white/30 transition-all placeholder:text-text-muted/50 text-sm" />
                  </div>
                  <div class="space-y-2">
                      <label class="text-xs font-bold text-text-muted uppercase tracking-wider ml-1">Email</label>
                      <input type="email" placeholder="john@example.com" class="w-full bg-[#151720] border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-white/30 transition-all placeholder:text-text-muted/50 text-sm" />
                  </div>
              </div>
              <div class="space-y-2">
                  <label class="text-xs font-bold text-text-muted uppercase tracking-wider ml-1">Subject</label>
                  <input type="text" placeholder="Project Inquiry" class="w-full bg-[#151720] border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-white/30 transition-all placeholder:text-text-muted/50 text-sm" />
              </div>
              <div class="space-y-2">
                  <label class="text-xs font-bold text-text-muted uppercase tracking-wider ml-1">Message</label>
                  <textarea rows={6} placeholder="Tell me about your project..." class="w-full bg-[#151720] border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-white/30 transition-all placeholder:text-text-muted/50 resize-none text-sm"></textarea>
              </div>
              <button class="w-full py-4 bg-primary text-white rounded-lg font-bold hover:bg-primary/90 transition-colors">Send Message</button>
          </form>
      </Card>

      <div class="mt-16 text-center">
          <div class="inline-flex items-center gap-3 bg-surface px-6 py-3 rounded-full border border-white/5">
               <MapPin size={16} className="text-text-muted" /> 
               <span class="text-text-body text-sm font-medium">{PROFILE.location}</span>
               <span class="w-1 h-4 bg-white/10"></span>
               <CheckCircle size={16} className="text-green-500" />
               <span class="text-white text-sm font-medium">Available for new projects</span>
          </div>
          
          <div class="flex justify-center gap-6 mt-10">
              <a href={getSocialUrl('GitHub')} target="_blank" class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-text-muted hover:text-white hover:bg-white/5 transition-all">
                  <Github size={24} />
              </a>
              <a href={getSocialUrl('LinkedIn')} target="_blank" class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-text-muted hover:text-white hover:bg-white/5 transition-all">
                  <Linkedin size={24} />
              </a>
              <a href={getSocialUrl('Twitter')} target="_blank" class="w-12 h-12 rounded-full border border-white/10 flex items-center justify-center text-text-muted hover:text-white hover:bg-white/5 transition-all">
                  <Twitter size={24} />
              </a>
          </div>
      </div>
    </div>
  </div>
</Layout>
