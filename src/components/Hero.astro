---
// src/components/Hero.astro
import { Terminal } from 'lucide-react';

interface Props {
    profile: any;
}

const { profile } = Astro.props;

// Fallback HERO_DATA if profile is null
const defaultHero = {
  status: 'Available for Freelance Projects',
  title: {
    line1: 'Designing the',
    highlight: 'Future',
    line2: 'of Web.'
  },
  description: 'I help companies build modern, scalable, and secure web applications. Merging clean code with pixel-perfect design to create seamless digital experiences.',
  stats: [
    { label: 'Commit Streak', value: '142 Days', color: 'green' },
    { label: 'Projects', value: '50+ Shipped', color: 'blue' },
    { label: 'Coffee', value: 'Infinite', color: 'yellow' }
  ]
};

const HERO_DATA = profile ? {
    status: profile.availability,
    title: {
        line1: 'Designing the',
        highlight: 'Future',
        line2: 'of Web.'
    },
    description: profile.about[0], // Using first paragraph as description
    stats: defaultHero.stats // Stats could be dynamic later
} : defaultHero;
---

<section class="relative min-h-screen flex items-center pt-28 pb-20 overflow-hidden">
    {/* Background Elements - Minimalist */}
    <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary/5 blur-[120px] rounded-full -z-10 opacity-50"></div>
    <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-accent/5 blur-[100px] rounded-full -z-10 opacity-30"></div>

    <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-2 gap-16 items-center w-full">
        {/* Left Content */}
        <div class="flex flex-col items-start text-left z-10 animate-in slide-in-from-left duration-700 fade-in">
            <div class="inline-flex items-center gap-2 py-1.5 px-4 rounded-full bg-white/5 border border-white/10 text-text-muted text-xs font-semibold tracking-wide mb-8 hover:bg-white/10 transition-colors cursor-default">
                <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse shadow-[0_0_10px_rgba(34,197,94,0.5)]"></span>
                {HERO_DATA.status}
            </div>

            <h1 class="text-4xl md:text-6xl lg:text-[64px] leading-[1.1] font-bold tracking-tight mb-6 text-white font-sans">
                {HERO_DATA.title.line1} <br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">{HERO_DATA.title.highlight}</span> {HERO_DATA.title.line2}
            </h1>

            <p class="text-base md:text-lg text-text-body max-w-lg leading-relaxed mb-10">
                {HERO_DATA.description}
            </p>

            <div class="flex flex-wrap gap-4 mb-12">
                <a href="/projects" class="px-6 py-3 bg-primary text-white rounded-lg text-sm font-bold hover:bg-primary/90 transition-colors">
                    View Projects
                </a>
                <a href="/contact" class="px-6 py-3 bg-surface text-white border border-white/10 rounded-lg text-sm font-bold hover:bg-surface/80 transition-colors">
                    Contact Me
                </a>
            </div>
            
            {/* Tech Stack Indicator */}
            <div class="flex items-center gap-6 opacity-60 grayscale hover:grayscale-0 transition-all duration-500 border-t border-white/5 pt-8 w-full">
                 <span class="text-lg font-bold text-white/40 hover:text-white transition-colors">React</span>
                 <span class="text-lg font-bold text-white/40 hover:text-white transition-colors">Next.js</span>
                 <span class="text-lg font-bold text-white/40 hover:text-white transition-colors">TypeScript</span>
                 <span class="text-lg font-bold text-white/40 hover:text-white transition-colors">Node</span>
            </div>
        </div>

        {/* Right Image/Visual */}
        <div class="relative z-10 flex justify-center lg:justify-end animate-in slide-in-from-right duration-700 fade-in delay-200 mt-10 lg:mt-0">
            <div class="relative w-full max-w-md aspect-square">
                {/* Decorative Wireframes */}
                <div class="absolute inset-0 border border-white/10 rounded-2xl transform rotate-3 translate-x-2 translate-y-2 z-0"></div>
                <div class="absolute inset-0 border border-white/5 rounded-2xl transform -rotate-3 -translate-x-2 -translate-y-2 bg-[#1a1d29]/30 backdrop-blur-sm z-0"></div>
                
                {/* Main Image Container */}
                <div class="absolute inset-2 rounded-xl overflow-hidden border border-white/10 bg-surface shadow-2xl z-10 group">
                     <img 
                        src={profile?.profileImage && !profile.profileImage.includes('picsum') ? profile.profileImage : "/images/hero-bg.jpg"} 
                        alt="Developer Workspace" 
                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-700 grayscale hover:grayscale-0"
                    />
                    {/* Gradient Overlay */}
                    <div class="absolute inset-0 bg-gradient-to-t from-[#1a1d29] via-transparent to-transparent opacity-60"></div>
                </div>

                {/* Characteristic Code Widget */}
                <div class="absolute -bottom-6 -left-6 lg:-left-12 bg-[#1e212f]/90 backdrop-blur-xl p-5 rounded-xl border border-white/10 shadow-2xl z-20 hover:-translate-y-1 transition-transform duration-300 w-64 hidden sm:block">
                    <div class="flex items-center justify-between mb-3 border-b border-white/5 pb-2">
                         <div class="flex items-center gap-2">
                            <Terminal size={14} className="text-primary" />
                            <span class="text-[10px] font-mono text-text-muted uppercase tracking-wider">dev_stats</span>
                         </div>
                         <div class="flex gap-1.5">
                            <span class="w-2 h-2 rounded-full bg-red-500/50"></span>
                            <span class="w-2 h-2 rounded-full bg-yellow-500/50"></span>
                            <span class="w-2 h-2 rounded-full bg-green-500/50"></span>
                         </div>
                    </div>
                    <div class="space-y-1.5 font-mono text-[11px] leading-relaxed">
                         {HERO_DATA.stats.map((stat) => (
                             <div class="flex justify-between text-text-body">
                                <span>{stat.label}</span>
                                <span class={`text-${stat.color}-400 font-bold`}>{stat.value}</span>
                             </div>
                         ))}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
