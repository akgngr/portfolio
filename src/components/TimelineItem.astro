---
// src/components/TimelineItem.astro
import Card from './ui/Card.astro';
import { Briefcase } from 'lucide-react';

interface Props {
  experience: {
    company: string;
    position: string;
    period: string;
    description: string[];
    logo?: string;
    categoryName?: string;
  };
  index: number;
}

const { experience, index } = Astro.props;
const isEven = index % 2 === 0;
---

<div class={`relative flex flex-col md:flex-row items-center ${isEven ? 'md:flex-row-reverse' : ''}`}>
   {/* Dot */}
   <div class="absolute left-[-37px] md:left-1/2 top-8 w-3 h-3 rounded-full bg-white z-10 -translate-x-1/2 md:-translate-x-1/2 border-[3px] border-background"></div>
   
   <div class="w-full md:w-1/2 p-4">
      <Card className={`relative ${isEven ? 'md:mr-auto' : 'md:ml-auto'}`}>
        <div class="flex items-center gap-4 mb-4">
          <div class="p-2 bg-white/5 rounded-lg text-white">
              <Briefcase size={20} />
          </div>
          <div>
              <div class="flex items-center gap-2 flex-wrap">
                  <h4 class="text-lg font-bold text-white">{experience.position}</h4>
                  {experience.categoryName && (
                      <span class="text-[10px] font-bold text-emerald-400 bg-emerald-400/10 px-2 py-0.5 rounded border border-emerald-400/20 uppercase tracking-wider">
                          {experience.categoryName}
                      </span>
                  )}
              </div>
              <span class="text-text-muted text-sm font-medium">{experience.company}</span>
          </div>
        </div>
        <ul class="space-y-2 mb-4">
            {experience.description.map((item) => (
                <li class="text-text-body text-sm flex items-start gap-3">
                   <span class="mt-2 w-1 h-1 rounded-full bg-white/30 shrink-0"></span>
                   {item}
                </li>
            ))}
        </ul>
        <span class="text-xs font-bold text-text-muted uppercase tracking-wider border border-white/5 px-2 py-1 rounded">
            {experience.period}
        </span>
      </Card>
   </div>
   <div class="w-full md:w-1/2"></div>
</div>
