---
// src/components/SkillsSection.astro
import { Cpu } from 'lucide-react';

interface Props {
  skills: any[];
}

const { skills } = Astro.props;
---

<section class="py-20 px-6 max-w-7xl mx-auto border-t border-white/5">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12">
         <div class="text-left">
            <h2 class="text-3xl font-bold text-white mb-2 tracking-tight flex items-center gap-3">
                <Cpu className="text-primary" />
                Tech Arsenal
            </h2>
            <p class="text-text-muted text-sm max-w-md">
                Core technologies I utilize to build scalable solutions.
            </p>
         </div>
         <a href="/skills" class="hidden md:block text-sm font-mono text-text-muted hover:text-white transition-colors uppercase tracking-widest">
             View Full Matrix →
         </a>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        {skills.map((skill) => (
            <div class="group relative bg-[#1a1d29] border border-white/10 p-5 rounded-lg hover:border-white/20 transition-all duration-300">
                <div class="flex justify-between items-start mb-4">
                    <span class="text-2xl">{skill.icon}</span>
                    <span class="text-[10px] font-mono font-bold text-text-muted/50 group-hover:text-[#10b981] transition-colors">
                        {skill.level}%
                    </span>
                </div>
                <h4 class="text-white font-bold mb-1">{skill.name}</h4>
                <p class="text-xs text-text-muted line-clamp-1 mb-3">{skill.description}</p>
                
                <div class="h-1 w-full bg-white/5 rounded-full overflow-hidden">
                    <div 
                        class="h-full bg-white/40 group-hover:bg-[#10b981] group-hover:shadow-[0_0_8px_rgba(16,185,129,0.5)] transition-all duration-500" 
                        style={`width: ${skill.level}%`}
                    ></div>
                </div>
            </div>
        ))}
    </div>
    
    <div class="mt-8 text-center md:hidden">
         <a href="/skills" class="text-sm font-mono text-text-muted hover:text-white transition-colors uppercase tracking-widest">
             View Full Matrix →
         </a>
    </div>
</section>
